{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Event",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "category": {
            "$ref": "#/$defs/Category"
        },
        "status": {
            "$ref": "#/$defs/CertificateOrUptimeStatus"
        },
        "error": {
            "type": "string"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "monitor": {
            "type": "object",
            "$ref": "monitor.json"
        }
    },
    "required": [
        "id",
        "category",
        "status",
        "error",
        "created_at",
        "monitor"
    ],
    "$defs": {
        "Category": {
            "type": "string",
            "enum": [
                "UPTIME",
                "CERTIFICATE"
            ]
        },
        "CertificateOrUptimeStatus": {
            "type": "string",
            "enum": [
                "not yet checked",
                "up",
                "down",
                "valid",
                "invalid"
            ]
        }
    }
}
